<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <!-- Customize your theme here. -->
        <item name="android:background">@color/background_color</item>
    </style>

    <style name="PercentChangeTextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BidPriceTextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="StockSymbolTextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="StockNameTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/accent</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="WidgetPercentChangeTextStyle" parent="PercentChangeTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="WidgetBidPriceTextStyle" parent="BidPriceTextStyle">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="WidgetStockSymbolTextStyle" parent="StockSymbolTextStyle">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="WidgetStockNameTextStyle" parent="StockNameTextStyle">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MyFloatingButton" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="DetailStockView" >
        <item name="android:padding">0dp</item>
        <item name="android:layout_gravity">fill_vertical</item>
        <item name="android:foregroundGravity">center</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="date_selector">
        <item name="android:padding">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/light_green</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>

</resources>
