<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <!--<com.db.chart.view.LineChartView-->
        <!--xmlns:chart="http://schemas.android.com/apk/res-auto"-->
        <!--android:id="@+id/linechart"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="0dp"-->
        <!--android:layout_weight='3'/>-->
    <com.db.chart.view.LineChartView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"/>

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:padding="10dp"
        app:columnCount="3">

        <com.sam_chordas.android.stockhawk.ui.DetailStockView
            android:id="@+id/prev_close"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:foregroundGravity="center"
            app:layout_columnSpan="1"
            app:layout_gravity="fill_horizontal"
            app:layout_columnWeight="1"
            app:image_source="@drawable/prev_close"
            app:backgroundTint="#9c8b68"
            />
        <com.sam_chordas.android.stockhawk.ui.DetailStockView
            android:id="@+id/high"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_gravity="fill_horizontal"
            app:layout_columnSpan="1"
            app:layout_columnWeight="1"
            app:image_source="@drawable/high"
            />
        <com.sam_chordas.android.stockhawk.ui.DetailStockView
            android:id="@+id/volume"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_gravity="fill_horizontal"
            app:layout_columnSpan="1"
            app:layout_columnWeight="1"
            app:image_source="@drawable/volume"
            />
        <com.sam_chordas.android.stockhawk.ui.DetailStockView
            android:id="@+id/open"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_gravity="fill_horizontal"
            app:layout_columnSpan="1"
            app:layout_columnWeight="1"
            app:image_source="@drawable/open"
            />
        <com.sam_chordas.android.stockhawk.ui.DetailStockView
            android:id="@+id/low"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_gravity="fill_horizontal"
            app:layout_columnSpan="1"
            app:layout_columnWeight="1"
            app:image_source="@drawable/low"
            />
        <com.sam_chordas.android.stockhawk.ui.DetailStockView
            android:id="@+id/mkt_cap"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_gravity="fill_horizontal"
            app:layout_columnSpan="1"
            app:layout_columnWeight="1"
            app:image_source="@drawable/mkt_cap"
            />

    </android.support.v7.widget.GridLayout>



</LinearLayout>